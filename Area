package Tech_2;
class shapes {
	float length = 32.f;
	float breadth = 44.f;
	float area = length*breadth;
	void display() {
	System.out.println("The area of shapes are:" + area);
}
}
class rectangle extends shapes{
	float length = 32.f;
	float breadth = 44.f;
	float area1 = length*breadth;
	void display() {
	System.out.println("The area of rectangle is:" + area1 );
	}
}
class triangle extends shapes{
	float length = 32.f;
	float breadth = 44.f;
	double area1 = (0.5*(length*breadth));
	void display() {
	System.out.println("The area of triangle is:" + area1 );
	}
}
class square extends shapes{
	float length = 32.f;
	float breadth = 44.f;
	float area1 = length*length;
	void display() {
	System.out.println("The area of square is:" + area1 );
	}
}	

public class Area {

	public static void main(String[] args) {
		shapes s;
		s = new rectangle();
		s.display();
		s = new triangle();
		s.display();
		s = new square();
		s.display();
		

	}

}
