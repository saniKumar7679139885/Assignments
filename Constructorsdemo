package fidelitydemo;

public class Constructorsdemo {
	
	int empId;
	String name;
	double salary;
	
	public Constructorsdemo() {//default constructor
		System.out.println("Constructors");
		
	}
	public Constructorsdemo(int empId,String name,double salary ) {
		this();// will call your default constructor
		this.empId = empId;
		this.name = name;
		this.salary = salary;
	}
	void display() {
	System.out.println("Employee id is :" +empId);
	System.out.println("Name of the employee:" +name);
	System.out.println("Salary of the employee:" +salary);
	}

	public static void main(String[] args) {
		Constructorsdemo cd1 = new Constructorsdemo(101,"Karan",34000.00);  // constructor is called on object ceation
		Constructorsdemo cd2 = new Constructorsdemo(102,"Tania",54000.00);  // constructor is called on object ceation
		Constructorsdemo cd3 = new Constructorsdemo(103,"Arjun",78000.00);  // constructor is called on object ceation
		cd1.display();
		cd2.display();
		cd3.display();
	}
}
